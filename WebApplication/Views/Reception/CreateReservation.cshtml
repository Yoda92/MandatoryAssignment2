@model WebApplication.Models.Reservation

@{
    ViewData["Title"] = "CreateReservation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Reservation</h1>

<form asp-action="CreateReservation">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-group">
        <label asp-for="Date"></label>
        <input asp-for="Date"/>
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RoomNumber"></label>
        <input asp-for="RoomNumber"/>
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfAdults"></label>
        <input asp-for="NumberOfAdults"/>
        <span asp-validation-for="NumberOfAdults" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NumberOfChildren"></label>
        <input asp-for="NumberOfChildren"/>
        <span asp-validation-for="NumberOfChildren" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create reservation" class="btn">
    </div>
    
    
</form>

