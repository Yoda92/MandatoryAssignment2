@model IEnumerable<WebApplication.Models.Reservation>

@{
    ViewData["Title"] = "Reception";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
    <h1>Reception</h1>
    <a asp-action="Index" class="btn btn-primary">View all reservations</a>
    <a asp-action="Today" class="btn btn-primary">View todays reservations</a>
    <a asp-action="CreateReservation" class="btn btn-primary">Create a reservation</a>
    <a asp-action="CheckedInToday" class="btn btn-primary">See how many guests had breakfast today</a>
    <h2>Reservations</h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model=>model.RoomNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NumberOfAdults)
                </th>
                <th>
                    @Html.DisplayNameFor(model=>model.NumberOfChildren)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
                {
                    <tr>
                        <th>
                            @item.Date.ToShortDateString()
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem=>item.RoomNumber)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem => item.NumberOfAdults)
                        </th>
                        <th>
                            @Html.DisplayFor(modelItem=>item.NumberOfChildren)
                        </th>
                    </tr>
                }
        </tbody>
    </table>
</div>
</body>
</html>