@model IEnumerable<WebApplication.Models.Reservation>

@{
    ViewData["Title"] = "Restaurant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4">Restaurant</h1>
<a href="/Restaurant/CheckIn" class="btn btn-primary">Check-In Guest</a>

<div>
    <h2>Reservations for today</h2>
    
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Room Number</th>
                <th scope="col">Number Of Adults</th>
                <th scope="col">Number Of Children</th>
                <th scope="col">Number Of Adults Checked In</th>
                <th scope="col">Number Of Children Checked In</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.RoomNumber)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.NumberOfAdults)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.NumberOfChildren)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.NumberOfAdultsCheckedIn)
                </th>
                <th>
                    @Html.DisplayFor(modelItem => item.NumberOfChildrenCheckedIn)
                </th>
            </tr>
        }
        </tbody>
    </table>
</div>



