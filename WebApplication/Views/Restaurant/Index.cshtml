
@{
    ViewData["Title"] = "Restaurant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="display-4">Check-In Guest</h1>
<form method="post" enctype="multipart/form-data" asp-controller="Restaurant" asp-action="Index">
    <div class="form-group" >
        <label for="inputRoomNumber">Room Number</label>
        <input type="text" class="form-control" id="inputRoomNumber">
    </div>

    <div class="form-group">
        <label for="inputAdultNumber">Number of Adults</label>
        <input type="text" class="form-control" id="inputAdultNumber">
    </div>

    <div class="form-group">
        <label for="inputChildrenNumber">Number Of Children</label>
        <input type="text" class="form-control" id="inputChildrenNumber">
    </div>

    <button type="submit" class="btn btn-primary">Check-In!</button>
</form>


